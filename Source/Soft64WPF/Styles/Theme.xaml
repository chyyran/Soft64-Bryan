                    xmlns:toolkit="clr-namespace:Soft64.Toolkits.WPF;assembly=Soft64.Toolkits.WPF">

    <!-- Theme Accent Colors -->
    <SolidColorBrush x:Key="Theme_LightAccentColor_1" Color="#FFC5FFF5" />
    <SolidColorBrush x:Key="Theme_LightAccentColor_2" Color="#FFFFBC61" />
    <SolidColorBrush x:Key="Theme_DarkAccentColor_1" Color="#FF00323A" />

    <!-- Theme font families -->
    <FontFamily x:Key="Theme_MonoFont_1">/Soft64WPF;component/Fonts/#Droid Sans Mono</FontFamily>
    <FontFamily x:Key="Theme_InfoFont_1">/Soft64WPF;component/Fonts/#Emulogic</FontFamily>

