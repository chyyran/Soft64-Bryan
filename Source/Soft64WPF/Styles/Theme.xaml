    <Style TargetType="toolkit:HexEditor">
        <Setter Property="Foreground" Value="{StaticResource Theme_LightAccentColor_1}" />
        <Setter Property="Background" Value="{StaticResource Theme_DarkAccentColor_1}" />
        <Setter Property="FontFamily" Value="{StaticResource Theme_MonoFont_1}" />
        <Setter Property="FontSize"  Value="17" />
        <Setter Property="TextOptions.TextRenderingMode" Value="ClearType" />
        <Setter Property="TextOptions.TextHintingMode" Value="Fixed" />
        <Setter Property="GridLineBrush" Value="{StaticResource Theme_LightAccentColor_2}" />
    </Style>

